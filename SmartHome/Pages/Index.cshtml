@page
@model SmartHomeApp.Pages.SelectUserModel
@using SmartHomeApp.Models

<link rel="stylesheet" href="~/css/site.css" />
<link rel="icon" href="~/favicon.png" type="image/png" />

<div class="select-wrapper">
    <div class="user-container">
        <h1 class="user-title">Gebruiker Selecteren of Toevoegen</h1>

        <div class="row g-4">
            <!-- Bestaande gebruiker -->
            <div class="col-md-6">
                <div class="user-card">
                    <h2>Bestaande Gebruiker</h2>
                    <form method="post" class="user-form">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Kies een gebruiker:</label>
                            <select asp-for="Name"
                                    asp-items="@(new SelectList(Model.Users, "Name", "Name"))"
                                    class="form-select">
                                <option value="">-- Selecteer gebruiker --</option>
                            </select>

                        </div>
                        <button type="submit" class="btn btn-primary">Doorgaan</button>
                    </form>
                </div>
            </div>

            <!-- Nieuwe gebruiker -->
            <div class="col-md-6">
                <div class="user-card">
                    <h2 style="color: #6c757d;">Nieuwe Gebruiker</h2>
                    <form method="post" asp-page-handler="AddUser" class="user-form">
                        <div class="mb-3">
                            <label asp-for="NewUserName" class="form-label">Nieuwe gebruikersnaam:</label>
                            <input type="text"
                                   asp-for="NewUserName"
                                   placeholder="Voer naam in"
                                   class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-secondary">Gebruiker toevoegen</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
